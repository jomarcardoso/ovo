{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    // "skipLibCheck": true,
    // "skipDefaultLibCheck": true,
    "outDir": "./dist",
    "declarationDir": "./types",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": [
      "es2019",
      "DOM"
    ]
  },
  "include": ["src"],
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "dist",
    "types",
    "coverage",
    "reports"
  ]
}
