{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    // "skipLibCheck": true,
    // "skipDefaultLibCheck": true,
    "outDir": "./dist",
    "declarationDir": "./types",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    // "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": [
      "es2017",
      "es2019",
      "DOM"
    ],
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "dist",
    "types",
    "coverage",
    "reports"
  ]
}
